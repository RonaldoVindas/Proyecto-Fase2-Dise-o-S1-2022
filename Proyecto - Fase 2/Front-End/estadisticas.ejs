<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>wiki</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.2.1/dist/css/bootstrap.min.css"
        integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <style>
        * {
            margin: 0;
            padding: 0;
            font-family: sans-serif;
        }
        .chartMenu {
            width: 100vw;
            height: 40px;
            background: #1A1A1A;
            color: rgb(101, 236, 101);
        }
        .chartMenu p {
            padding: 10px;
            font-size: 20px;
        }
        .chartCard {
            width: 100vw;
            height: calc(100vh - 40px);
            background: rgb(46, 90, 211);
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .chartBox {
            width: 700px;
            padding: 20px;
            border-radius: 20px;
            border: solid 3px rgb(40, 92, 5);
            background: white;
        }
        section {
            width: 100vw;
            height: 6vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
        input {
            width: 50vw;
            padding: 10px;
            outline: none;
            border: 5px solid #CCD1E4;
            font-weight: 600;
        }
        table {
            border: rgb(69, 194, 69) 5px solid;
            margin: 0 auto;
        }
        td {
        margin: 0;
        padding: 0;
        font-family: sans-serif;
        color: rgb(0, 15, 2);
        }

        .nav-link {
            color: rgb(255, 255, 255);
            font-size: larger;
        }

        .bg-info {
        background-color: #0a1842 !important;
        color: rgb(255, 255, 255);

        }

    </style>

    <nav class="sticky-top navbar navbar-light bg-info ">

        <ul class="navbar-nav">
            <a class="navbar-brand text-light" href="#"> </a>
            <section id="contenedor-main">
                <p style = "color: rgb(255, 255, 255); font-size: larger;"> Estadísticas </p>
            </section>
        </ul>
    </nav>
</head>

<body>
    <div class="chartCard">
        <div class="chartBox">
            <canvas id="myChart"></canvas>
        </div>
    </div>


    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // setup 
        
        const data = {
            labels: ["Espacios reservados por departamento", "Espacios libres por departamento", "Espacios 7600 ocupados por departamento"],                                
            datasets: [{
                label: 'Estadísticas Estacionamientos',
                data:[5, 10, 1],
                backgroundColor: [
                    'rgba(255, 26, 104, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)',
                    'rgba(0, 0, 0, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 26, 104, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)',
                    'rgba(0, 0, 0, 1)'
                ],
                borderWidth: 2
            }]
        };
        // config 
        const config = {
            type: 'bar',
            data,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        };
        // render init block
        const myChart = new Chart(
            document.getElementById('myChart'),
            config
        );
    </script>



</body>
</body>

</html>